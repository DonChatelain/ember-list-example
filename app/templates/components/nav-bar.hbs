{{#if isShown}}
  <div class="bg-success padding-sm">
    <p {{action 'toggleNav'}}>
      <img src='/arrow-alt-left.png'
           height='30'
           width='30'/>HIDE NAV</p>

    <div class='text-center'>
      <div class="row">
        <div class="col-md-12">
          <p><strong>Filter:</strong> {{input value=search placeholder='Search'}}</p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p><strong>SORT:</strong></p>
          <ul class='list-unstyled'>
            <li><a {{action 'sort' 'firstName:asc'}} class='btn btn-default'> Alphabetically ASC</a>
                <a {{action 'sort' 'firstName:desc'}} class='btn btn-default'> Alphabetically DESC</a></li>
            <li><a {{action 'sort' 'age:asc'}} class='btn btn-default margin-top-xs'> Young -> Old</a>
                <a {{action 'sort' 'age:desc'}} class='btn btn-default margin-top-xs'> Old -> Young</a></li>
          </ul>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p><strong>Generate:</strong></p>
          <!-- <ul class='list-unstyled'>
            <li><a {{action 'generate' 5}} class='btn btn-default' >5 Items</a></li>
            <li><a {{action 'generate' 10}} class='btn btn-default margin-top-xs' >10 Items</a></li>
            <li><a {{action 'generate' 50}} class='btn btn-default margin-top-xs' >50 Items</a></li>
          </ul> -->
          <a {{action 'generate' 5}} class='btn btn-default' >5 Items</a>
          <a {{action 'generate' 10}} class='btn btn-default' >10 Items</a>
          <a {{action 'generate' 50}} class='btn btn-default' >50 Items</a>
        </div>
      </div>
      <div class="row margin-top-md">
        <a {{action 'clearList' modelName}} class='btn btn-danger margin-bottom-xs'>Clear List</a>
      </div>
    </div>
  </div>
{{else}}
  <div class="text-center margin-top-sm">
    <img src='/hamburger_icon.png'
         height='50'
         width='50'
         {{action 'toggleNav'}} />
  </div>
{{/if}}
