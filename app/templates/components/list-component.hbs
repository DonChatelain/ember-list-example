<div class="row">
    <div class='col-md-12'>
      {{#if false}}
        <p><strong>Custom Item:</strong> {{input value=firstName placeholder='First Name'}}
          {{input value=lastName placeholder='Last Name'}}
          <button {{action 'saveNewItem'}} class='btn btn-success'>Save</button></p>
      {{/if}}

      <table class='table table-striped table-bordered'>
        <thead>
          <th>Name:</th>
          <th>Age:</th>
          <th></th>
        </thead>
        <tbody>
          {{#each list as |item| }}
            <tr>
              <td>{{item.fullName}}</td>
              <td>{{item.age}}</td>
              <td class='text-center'>
                {{link-to 'Profile' 'list.item' item class='btn btn-success'}}
                {{button-param text='Unfriend' classNames='btn-danger' action='removeUser' param=item}}
              </td>
            </tr>
            {{#if item.showProfile}}
              <tr>
                <td colspan='4'>
                  {{outlet}}
                </td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    </div>
</div>
