<div class="row">
  <div class="col-md-6">
    <p>
      <a {{action 'clearList' modelName}} class='btn btn-danger pull-right'>Clear List</a>
      <h2>{{title}}</h2>
    </p>

    <div class="col-md-4">
      <p><strong>SORT:</strong></p>
      <ul class='list-unstyled'>
        <li><a {{action 'sort' 'firstName:asc'}} class='btn btn-default'> Alphabetically ASC</a></li>
        <li><a {{action 'sort' 'firstName:desc'}} class='btn btn-default margin-top-xs'> Alphabetically DESC</a></li>
        <li><a {{action 'sort' 'age:asc'}} class='btn btn-default margin-top-xs'> Young -> Old</a></li>
        <li><a {{action 'sort' 'age:desc'}} class='btn btn-default margin-top-xs'> Old -> Young</a></li>
      </ul>
    </div>

    <div class="col-md-4">
      <p><strong>Filter:</strong> {{input value=search placeholder='Search'}}</p>
    </div>

    <div class="col-md-4">
      <p><strong>Generate:</strong></p>
      <ul class='list-unstyled'>
        <li><a {{action 'generate' 5}} class='btn btn-default' >5 Items</a></li>
        <li><a {{action 'generate' 10}} class='btn btn-default margin-top-xs' >10 Items</a></li>
        <li><a {{action 'generate' 50}} class='btn btn-default margin-top-xs' >50 Items</a></li>
      </ul>
    </div>

  </div>


    <div class='col-md-6'>
      {{#if false}}
        <p><strong>Custom Item:</strong> {{input value=firstName placeholder='First Name'}}
          {{input value=lastName placeholder='Last Name'}}
          <button {{action 'saveNewItem'}} class='btn btn-success'>Save</button></p>
      {{/if}}

      <table class='table table-striped table-bordered'>
        <thead>
          <th>Name:</th>
          <th>Age:</th>
          <th>Profile:</th>
          <th>Delete:</th>
        </thead>
        <tbody>
          {{#each list as |item| }}
            <tr>
              <td>{{item.fullName}}</td>
              <td>{{item.age}}</td>
              <td>
                <!-- <a {{action 'showProfile' item}} class='btn btn-success'>Profile</a> -->
                {{link-to 'Profile' 'list.item' item class='btn btn-success'}}
              </td>
              <td><a {{action 'removeUser' item}} class='btn btn-danger btn-xs pull-center'><strong>X</strong></a></td>
            </tr>
            {{#if item.showProfile}}
              <tr>
                <td colspan='4'>
                  {{yield}}
                </td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    </div>
</div>
